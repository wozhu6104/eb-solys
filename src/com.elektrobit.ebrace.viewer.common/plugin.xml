<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>

<plugin>
   <extension
         point="org.eclipse.ui.views">
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.elektrobit.ebrace.viewer.lockTable"
            name="Lock Table">
      </command>
      <command
            id="com.elektrobit.ebrace.viewer.unlockTable"
            name="Unlock Table">
      </command>
      <command
            id="com.elektrobit.ebrace.viewer.clearSelection"
            name="Clear selection">
      </command>
      <command
            id="com.elektrobit.ebrace.ui.ecl.preferences.clearAllData"
            name="Clear All Data">
      </command>
      <command
            id="com.elektrobit.ebrace.ui.ecl.preferences.screenshot"
            name="Take Screenshot">
      </command>
      <command
            id="com.elektrobit.ebrace.viewer.resources.selectChannels"
            name="Select channels">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.elektrobit.ebrace.viewer.lockTable">
         <class
               class="com.elektrobit.ebrace.viewer.common.handler.TableLockHandler">
         </class>
      </handler>
      <handler
            commandId="com.elektrobit.ebrace.viewer.unlockTable">
         <class
               class="com.elektrobit.ebrace.viewer.common.handler.TableUnlockHandler">
         </class>
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.common.handler.ClearSelectionInTable"
            commandId="com.elektrobit.ebrace.viewer.clearSelection">
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.common.handler.ClearAllDataHandler"
            commandId="com.elektrobit.ebrace.ui.ecl.preferences.clearAllData">
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.common.handler.TakeScreenShotHandler"
            commandId="com.elektrobit.ebrace.ui.ecl.preferences.screenshot">
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.common.handler.LoadTargetConfigHandler"
            commandId="com.elektrobit.ebrace.application.loadTargetConfig">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commandImages">
      <image
            commandId="com.elektrobit.ebrace.viewer.lockTable"
            icon="icons/table_scroll_unlocked.png">
      </image>
      <image
            commandId="com.elektrobit.ebrace.viewer.unlockTable"
            icon="icons/table_scroll_locked.png">
      </image>
      <image
            commandId="com.elektrobit.ebrace.viewer.clearSelection"
            icon="icons/clear_selection.gif">
      </image>
      <image
            commandId="com.elektrobit.ebrace.ui.ecl.preferences.clearAllData"
            icon="icons/clear_all_data.png">
      </image>
      <image
            commandId="com.elektrobit.ebrace.ui.ecl.preferences.screenshot"
            icon="icons/make_screenshot.png">
      </image>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <sourceProvider
            provider="com.elektrobit.ebrace.viewer.common.listeners.TableLockState">
         <variable
               name="com.elektrobit.ebrace.viewer.tablelockstate.active"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.elektrobit.ebrace.viewer.clearSelection"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="ESC">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.elektrobit.ebrace.viewer.common.handler.IsAnyTableContent"
            id="com.elektrobit.ebrace.viewer.common.exportEvents"
            namespace="com.elektrobit.ebrace.viewer.common.exportEvents"
            properties="isAnyTableContent"
            type="java.lang.Object">
      </propertyTester>
   </extension>

</plugin>
