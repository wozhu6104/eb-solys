<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.elektrobit.ebrace.viewer.eventmap.openEventMapEditor"
            name="Open Snapshot">
      </command>
      <command
            id="com.elektrobit.ebrace.viewer.eventmap.addRuntimeChannel"
            name="Add Channel">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.elektrobit.ebrace.viewer.snapshot.handler.OpenSnapshotEditorHandler"
            commandId="com.elektrobit.ebrace.viewer.eventmap.openEventMapEditor">
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.snapshot.handler.EditSnapshotTableHandler"
            commandId="com.elektrobit.ebrace.viewer.resources.selectChannels">
         <activeWhen>
            <or>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="com.elektrobit.ebrace.core.interactor.api.resources.model.snapshot.SnapshotModel">
                     </instanceof>
                  </iterate>
                  <count
                        value="1">
                  </count>
               </with>
               <and>
                  <with
                        variable="activePartId">
                     <equals
                           value="com.elektrobit.ebrace.viewer.eventmap.eventMapTableEditor">
                     </equals>
                  </with>
                  <with
                        variable="activeEditorId">
                     <equals
                           value="com.elektrobit.ebrace.viewer.eventmap.eventMapTableEditor">
                     </equals>
                  </with>
               </and>
            </or>
         </activeWhen>
      </handler>
      <handler
            class="com.elektrobit.ebrace.viewer.snapshot.handler.DeleteChannelHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <and>
               <with
                     variable="activePartId">
                  <equals
                        value="com.elektrobit.ebrace.viewer.eventmap.eventMapTableEditor">
                  </equals>
               </with>
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false">
                     <instanceof
                           value="com.elektrobit.ebrace.viewer.common.provider.ChannelValueProvider">
                     </instanceof>
                  </iterate>
               </with>
            </and>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:chartList.menu.new">
         
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:com.elektrobit.ebrace.viewer.eventmap.editor.contextmenu">
         <command
               commandId="com.elektrobit.ebrace.viewer.resources.selectChannels"
               style="push">
         </command>
         <command
               commandId="org.eclipse.ui.edit.delete"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="com.elektrobit.ebrace.viewer.snapshot.editor.SnapshotEditor"
            default="false"
            icon="icons/snapshot.png"
            id="com.elektrobit.ebrace.viewer.eventmap.eventMapTableEditor"
            name="Event Map Table Editor">
      </editor>
   </extension>

</plugin>
